<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/list">

    <fragment
        android:id="@+id/add"
        android:name="com.example.todoapp.add"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_add_to_list"
            app:destination="@id/list" />
    </fragment>
    <fragment
        android:id="@+id/update"
        android:name="com.example.todoapp.update"
        android:label="fragment_update"
        tools:layout="@layout/fragment_update" >
        <action
            android:id="@+id/action_update_to_list"
            app:destination="@id/list" />
    </fragment>
    <fragment
        android:id="@+id/list"
        android:name="com.example.todoapp.list"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_list_to_add"
            app:destination="@id/add" />
        <action
            android:id="@+id/action_list_to_update"
            app:destination="@id/update" />
    </fragment>
</navigation>